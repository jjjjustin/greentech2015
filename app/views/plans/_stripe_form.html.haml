.col-md-12
  .form-row.form-group
    = label_tag :card_number
    = text_field_tag :card_number, nil, name: nil, data: { stripe: "number" }, size: 20, id: "card-number", class: "form-control"

.col-md-12
  .form-row.form-group
    = label_tag :cvc, 'CVC'
    = text_field_tag :cvc, nil, name: nil, data: { stripe: "cvc" }, size: 4, id: "card-cvc-", class: "form-control"

.col-md-6
  .form-row.form-group
    = label_tag 'Expiration Month (MM)'
