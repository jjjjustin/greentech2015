.col-md-6
  .form-row.form-group
    = label_tag 'year (YYYY)'
    = text_field_tag :expiration_year, nil, name: nil, data: { stripe: "exp-year" }, id: "card-year", class: "form-control"

.col-md-12
  .form-row.form-group
    = label_tag :card_name, 'Full name'
